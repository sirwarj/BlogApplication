<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include ("layout") %>
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <% posts.forEach(function(post){ %>
                <h1 class="mt-4"> <%= post.title %> </h1>
                <p class="lead">by
                    <a href="/posts/show/?author=<%= post.author %>"> <%= post.author %> </a>
                </p>
                <hr>
                <p> Posted on <%= moment(post.date).format("DD-MM-YYYY") %></p>
                <hr>
                <img src=" <%= post.img %> " alt="" class="img-fluid rounded" width="900px" height="300px">
                <hr>
                <%- post.content %> 
                <% }) %>
                <hr>
            </div>
            <%- include ("sidebar") %>
        </div>
    </div>
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Warawit Siriyong</p>
        </div>
    </footer>
</body>
</html>